# Macro file for sauna
# 
# Can be run in batch, without graphic
# or interactively: Idle> /control/execute test.mac
#
#
# Initialize kernel
/run/initialize
#
/control/verbose 2
/run/verbose 2
/event/verbose 2
/tracking/verbose 1
#/tracking/storeTrajectory 1
# 
##########################
# MORE THAN ONE PARTICLE #
##########################
#
/gps/source/multiplevertex true
#
# electron from a volume with an isotropic angle distribution
#
/gps/particle e-
/gps/ene/mono 300 keV
/gps/pos/type Volume
/gps/pos/shape Cylinder
/gps/pos/radius 9 mm
/gps/pos/halfz 32.5 mm
/gps/ang/type iso
#
#
/gps/source/add 1
#
/gps/particle e-
/gps/ene/mono 100 keV
/gps/pos/type Volume
/gps/pos/shape Cylinder
/gps/pos/radius 1 mm
/gps/pos/halfz 32.5 mm
/gps/ang/type iso
#
#
/gps/source/add 1
#
# gamma 662 keV and isotropic angle distribution
#
/gps/particle gamma
/gps/ene/mono 662 keV
/gps/pos/type Volume
/gps/pos/shape Cylinder
/gps/pos/radius 1 mm
/gps/pos/halfz 32.5 mm
/gps/ang/type iso
#
/run/beamOn 10